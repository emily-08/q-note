<div class='wrapper'>
  <div class='genre'>
    <%= render "memos/genre_bar" %>
  </div>
  <div class="memo">
    <div>
      <%= form_with(url: search_genre_memos_path(@memos), local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
    </div>
    <div class="genre-box">
      <span class="genre-label" >検索メモ一覧</span>
      <% @memos.each do |memo| %>
        <p class="memo-title"><%= memo.title %><%= memo.created_at%><p>
      <% end %>
    </div>
  </div>
</div>
<div>
  <%= form_with(url: search_genre_memos_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>
  <% end %>
</div>

<% @memos.each do |memo| %>
  <p class="memo-title"><%= memo.title %><%= memo.created_at%><p>
<% end %>
<div class="home">
  <div class="icon">
    <%= link_to image_tag("home-icon.png", width: '25', alt: "サンプル画像"), root_path %>
    <br>home</br>
  </div>
  <div class="icon">
    <%= link_to image_tag("icon_038490_256.png", width: '25', alt: "サンプル画像"), destroy_user_session_path, method: :delete, class: 'btn'%>
    <br>ログアウト</br>
  </div>
</div>
<div class="geres-lists">
  <div class="genre-list-name">
    <div class="plus">
      <p><%= link_to image_tag("icon_001560_32.png", width: '20'), new_genre_path %></p>
      <p>ジャンル作成</p>
    </div>
  </div>
  <% current_user.genres.each do |genre| %>
    <div class="genre-list-name">
      <div class="genre-name">
        <p><%= link_to genre.name, genre_memos_path(genre) %></p>
        <%# 削除 %>
        <%= link_to image_tag("icon_065640_32.png", width: '20'), genre_path(genre.id), method: :delete %>
        <%# 詳細 %>
        <%= link_to image_tag("icon_000560_32.png", width: '20'), edit_genre_path(genre.id), method: :get %>
      </div>
    </div>
  <% end %>
</div>
<div class="memo-header">
  <div class="left-header">
    <div class="header-title">
      hogefuga
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <a href="#">このジャンルのメモを終了する</a>
    </div>
  </div>
</div>

<div class="memos-space">
  <%= render partial: 'memo', collection: @memos %>
</div>

<%= form_with model: [@genre, @memo], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :title, class: 'form-title', placeholder: 'type a title' %>
    <p><%= f.text_field :text, class: 'form-text', placeholder: 'type a text' %></p>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
<div class="wrapper">
  <div class="genre">
   <%= render "genre_bar" %>
  </div>
  <div class="memo">
    <div class="memos-space">
        <span class="genre-label" ><%= @genre.name %></span>
        <div class="memo-list">
          <div class="upper-memo">
            <p class="memo-title"><%= @memo.title %><%= l @memo.created_at%><p>
          </div>
        </div>
      <%= form_with model: [@genre, @memo], class: 'form', local: true do |f| %>
        <div class="form-input">
        <h3>編集</h3>
          <p><%= f.text_field :title, class: 'form-title', placeholder: 'type a title' %></p>
          <p><%= f.text_area :text, class: 'form-text', placeholder: 'type a text' %></p>
        </div>
        <label class="form-image">
            <span class="image-file">画像</span>
            <%= f.file_field :image, class: 'hidden' %>
        </label>
          <%= f.submit '保存', class: 'form-submit' %>
      <% end %>
    </div>  
  </div>
</div>
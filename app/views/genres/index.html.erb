<div class='wrapper'>
  <div class='genre'>
    <%= render "memos/genre_bar" %>
  </div>
  <%# 全てのメモ一覧 %>
  <div class="memo">
    <%= form_with(url: search_genre_memos_path(@memos), local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "メモを検索", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
    <div class="genre-home-box">
      <span class="genre-label" ><%= image_tag("home-icon.png", width: '22')%>メモ全一覧</span>
      <div class="memo-list">
        <% @memos.each do |memo| %>
          <p class="memo-title"><%= memo.title %><%= link_to image_tag("icon_059830_32.png", width: '20'), genre_memo_path(@genre, memo.id), method: :get %><p>
        <% end %>
      </div>
    </div>
  </div>
</div>